<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bg_five"
    android:gravity="top"
    android:padding="0dp"
    android:paddingBottom="20dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tracktrixlite.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:id="@+id/player_header_bg"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_alignParentTop="true"
        android:background="@layout/bg_player_header"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="20dp" >

        <!-- Song Title -->

        <TextView
            android:id="@+id/songTitle"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_weight="0.83"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="Tracktrix : Start Mode"
            android:textColor="#04b3d2"
            android:textSize="16dp"
            android:textStyle="bold" />

        <!-- Playlist button -->

        <Button
            android:id="@+id/openfilebhv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@null"
            android:drawableTop="@drawable/openmusicfile"
            android:text="Open File"
            android:textColor="#ffffff"
            android:textSize="10dp" />

        <Button
            android:id="@+id/settingsbhv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableTop="@drawable/img_btn_playlist"
            android:text="Settings"
            android:textColor="#ffffff"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/songThumbnail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/player_header_bg"
        android:gravity="top"
        android:padding="15dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/defaultlogo" />

        <LinearLayout
            android:id="@+id/songDetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.46"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/SongTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Song Title"
                android:textColor="#04b3d2"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AlbumName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SongTitle"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Album Name"
                android:textColor="#04b3d2"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SongTitle"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Artist"
                android:textColor="#04b3d2"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_hea_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@layout/bg_player_header"
        android:gravity="center"
        android:minHeight="80dp" >

        <!-- Player Buttons -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@layout/rounded_corner"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <Button
                android:id="@+id/record_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/record_normal"
                android:focusable="@bool/abc_action_bar_embed_tabs_pre_jb"
                android:text="Record"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" 
                android:layout_marginLeft="20dp"/>

            <Button
                android:id="@+id/render_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/rsz_render_icon"
                android:focusableInTouchMode="true"
                android:text="Render"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" 
                android:layout_marginLeft="20dp"/>

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Contains Save Button"
                android:drawableTop="@drawable/save_icon"
                android:text="Save"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" 
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_area_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player_hea_bg"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/songThumbnail"
        android:minHeight="100dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <LinearLayout
            android:id="@+id/player_control_area_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/player_control_area_two"
            android:orientation="horizontal"
            android:paddingBottom="5dp" >

            <Button
                android:id="@+id/play_pause_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:drawableTop="@drawable/play_icon"
                android:text="Play"
                android:textColor="#ffffff"
                android:textSize="12dp" 
                android:onClick="play_pause_button_pressed"/>

            <Button
                android:id="@+id/stop_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:drawableTop="@drawable/stop_icon"
                android:text="Stop"
                android:textColor="#ffffff"
                android:textSize="12dp" 
                android:onClick="stopbutton_pressed"/>

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp" >

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="No Filter"
                    android:textColor="#ffffff"
                    android:textSize="14dp" 
                    android:onClick="deactivate_filter"/>

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vocal Filter"
                    android:textColor="#ffffff"
                    android:textSize="14dp" 
                    android:onClick="activate_filter"/>
            </RadioGroup>

            <Button
                android:id="@+id/lyrics_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:drawableTop="@drawable/lyrics_icon"
                android:text="Lyrics"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player_control_area_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seek_bar_area"
            android:orientation="horizontal"
            android:padding="10dp" >
            <LinearLayout android:layout_height="wrap_content" android:id="@+id/player_control_area_two" android:layout_width="match_parent" android:orientation="horizontal" android:padding="10dp">
                <SeekBar android:layout_width="170dp" android:layout_weight="1" android:id="@+id/seekBar1" android:layout_height="wrap_content"/>
                <SeekBar android:layout_width="134dp" android:layout_weight="0.37" android:id="@+id/seekBar2" android:layout_height="wrap_content" android:indeterminate="false" android:progress="50"/>
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="170dp"
                android:layout_height="wrap_content" />

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.37"
                android:indeterminate="false"
                android:progress="50"
                 />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seek_bar_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/player_control_area_two"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>